<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorMainYellow" android:startColor="@color/colorMainYellow" />
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!--聚焦-->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0" android:endColor="@color/colorMainYellow" android:startColor="@color/colorMainYellow" />
            <corners android:radius="18dp" />
        </shape>
    </item>
    <!--默认-->
    <item>
        <shape>
            <gradient android:angle="0" android:endColor="@color/colorBackgroundWhite" android:startColor="@color/colorBackgroundWhite" />
            <corners android:radius="18dp" />
        </shape>
    </item>

</selector>