<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="143dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/margin_left"
    android:layout_marginRight="@dimen/margin_right"
    android:background="@color/colorBackgroundWhite"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/i_collect_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@mipmap/mine_top_bg" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/i_collect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="爱奇艺宠物医院"
            android:textColor="#232323"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/i_collect_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_collect_name"
            android:layout_marginTop="12dp"
            android:text="爱奇艺区古城小区西苑中学"
            android:textColor="#a2a2a2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/i_collect_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/i_collect_site"
            android:layout_marginTop="12dp"
            android:text="1245人去过"
            android:textColor="#a2a2a2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/i_collect_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/i_collect_person"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="12dp"
            android:drawableLeft="@mipmap/home_icon_address"
            android:text="700m"
            android:textColor="#a2a2a2"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/i_collect_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:text="￥30"
            android:textColor="#f35a5a"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/i_collect_price"
            android:layout_toRightOf="@+id/i_collect_price"
            android:paddingLeft="1dp"
            android:text="起"
            android:textColor="#f35a5a"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="@dimen/margin_right"
            android:src="@mipmap/mine_icon_collect_pre" />

    </RelativeLayout>
</LinearLayout>