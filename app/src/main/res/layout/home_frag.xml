<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGroundGrayC1"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:background="@mipmap/mine_top_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/search_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="@dimen/margin_size_40"
                        android:layout_marginRight="@dimen/margin_size_40"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/search_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_size_16"
                            android:drawableLeft="@mipmap/home_icon_search"
                            android:drawablePadding="@dimen/margin_size_10"
                            android:gravity="center_vertical"
                            android:text="搜索你感兴趣的"
                            android:textColor="@color/colorWhiteC1" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="156dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_size_24"
                    android:src="@mipmap/defoult_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_20"
                    android:gravity="center"
                    android:text="Every little  memory is beautiful\nbecause of you"
                    android:textColor="#F8E8D3"
                    android:textSize="@dimen/text_size_14" />
                ，


            </LinearLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:background="@color/colorBackGroundWhiteC1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tx_location"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_left_right"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/home_icon_address"
                            android:drawablePadding="@dimen/margin_size_10"
                            android:gravity="center_vertical"
                            android:text="成都市高新区天府二街天府鹭洲" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/margin_left_right"
                            android:src="@mipmap/home_icon_right" />
                    </LinearLayout>

                    <android.support.design.widget.TabLayout
                        android:id="@+id/tab_home"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_marginTop="@dimen/margin_size_10"
                        android:background="@color/colorBackGroundWhiteC1"
                        app:tabIndicatorHeight="3dp" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/vp_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:background="@color/colorBackGroundWhiteC1" />

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>