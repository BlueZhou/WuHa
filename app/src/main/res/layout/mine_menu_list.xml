<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:background="@color/colorBackGroundWhiteC1"
        android:gravity="center_vertical">

        <TextView
            style="@style/textTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/mine_icon_collect"
            android:drawablePadding="@dimen/margin_size_16"
            android:gravity="center_vertical"
            android:text="我的收藏" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_20"
            android:src="@mipmap/home_icon_right" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/colorBackGroundWhiteC1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView2"
            style="@style/textTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/mine_icon_massage"
            android:drawablePadding="@dimen/margin_size_16"
            android:gravity="center_vertical"
            android:text="意见建议" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_20"
            android:src="@mipmap/home_icon_right" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:layout_marginTop="1dp"
        android:background="@color/colorBackGroundWhiteC1"
        android:gravity="center_vertical">

        <TextView
            style="@style/textTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/mine_icon_call"
            android:drawablePadding="@dimen/margin_size_16"
            android:gravity="center_vertical"
            android:text="联系我们" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_20"
            android:src="@mipmap/home_icon_right" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/colorBackGroundWhiteC1"
        android:gravity="center_vertical">

        <TextView
            style="@style/textTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_12"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/mine_icon_shareapp"
            android:drawablePadding="@dimen/margin_size_16"
            android:gravity="center_vertical"
            android:text="分享app" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_size_20"
            android:src="@mipmap/home_icon_right" />

    </LinearLayout>


</LinearLayout>